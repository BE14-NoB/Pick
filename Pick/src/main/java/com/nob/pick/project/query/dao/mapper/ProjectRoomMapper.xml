<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nob.pick.project.query.dao.mapper.ProjectRoomMapper">
        <resultMap id="projectRoomResultMap" type="com.nob.pick.project.query.dto.ProjectRoomDTO">
            <id property="id" column="ID"/>
            <result property="name" column="NAME"/>
            <result property="content" column="CONTENT"/>
            <result property="isFinished" column="IS_FINISHED"/>
            <result property="isDeleted" column="IS_DELETED"/>
            <result property="durationTime" column="DURATION_TIME"/>
            <result property="maximumParticipant" column="MAXIMUM_PARTICIPANT"/>
            <result property="sessionCode" column="SESSION_CODE"/>
            <result property="startDate" column="START_DATE"/>
            <result property="endDate" column="END_DATE"/>
            <result property="technologyCategoryId" column="TECHNOLOGY_CATEGORY_ID"/>
            <result property="thumbnailImage" column="THUMBNAIL_IMAGE"/>
            <result property="introduction" column="INTRODUCTION"/>
            <result property="projectUrl" column="PROJECT_URL"/>
        </resultMap>

    <!-- 완료된 프로젝트 조회 -->
    <select id="selectFinishedProjects" resultMap="projectRoomResultMap">
        SELECT
              P.ID
            , P.NAME
            , P.CONTENT
            , P.IS_FINISHED
            , P.IS_DELETED
            , P.DURATION_TIME
            , P.MAXIMUM_PARTICIPANT
            , P.SESSION_CODE
            , P.START_DATE
            , P.END_DATE
            , P.INTRODUCTION
            , P.THUMBNAIL_IMAGE
            , P.PROJECT_URL
        FROM PROJECT_ROOM P
            WHERE IS_FINISHED = 'Y' AND IS_DELETED = 'N'
        ORDER BY ID DESC;
    </select>
</mapper>